<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_gradient_background"
    tools:context=".LoginActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:gravity="center"
            android:text="Bienvenido, esto es \n Covid App"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black_italic"
            android:gravity="center"
            android:text="Â¡Nuestra prioridad es tu salud!"
            android:textSize="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="covid.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>


        <Button
            android:id="@+id/signInButton"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_rounded_green"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:fontFamily="@font/lato_black"
            android:padding="15dp"
            android:text="Iniciar Sesion Con Google"
            android:textColor="@color/blue_grey_900" />


    </LinearLayout>
    
    

</RelativeLayout>